<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.soloparaapasionados.groupapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ToolBarActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />

        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".RegisterCourseActivity" />
        <activity android:name=".UbicacionesActivity" />

        <activity android:name=".MyProfileActivity"
            android:theme="@style/AppTheme.TranslucentSystemBars"/>

        <activity android:name=".PreferenciasActivity" />
        <activity android:name=".HorariosActivity" />
        <activity android:name=".PerfilCompaneroActivity"></activity>
    </application>

</manifest>